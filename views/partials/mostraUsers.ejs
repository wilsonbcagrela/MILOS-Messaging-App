<div class="card" style="border: 3px solid black;">
    <div class="card-body" style="min-height: 100vh;">
        <h3>Adicione amigos para poder falar com eles</h3>
        <div class="scrollable" style="overflow-y: auto; max-height: 84vh;">
            <% for(var x in utilizador){ %>
            <div>
                <% if (utilizador[x].image == null) { %>
                <img src="uploads/milos.png" alt="imagem de perfil" width="30" height="30">
                <% }else{ %>
                <img src="<%-utilizador[x].image.slice(7)%>" alt="imagem de perfil" width="30" height="30">
                <% } %>
                <%- utilizador[x].name %>
                <input type="submit" name="submit" value="Pedir Amizade" />
            </div>
            <% } %>
        </div>
        <a href="/">voltar a tr√°s</a>
    </div>
</div>